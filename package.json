{
    "name": "mtasa-lua",
    "displayName": "MTA:SA Lua",
    "description": "MTA:SA Lua Syntax + Highlighting",
    "version": "0.0.1",
    "publisher": "subtixx",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Languages",
        "Themes",
        "Snippets"
    ],
    "contributes": {
        "languages": [{
            "id": "mtalua",
            "aliases": ["MTA Lua", "mtalua"],
            "extensions": [".lua"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "mtalua",
            "scopeName": "source.lua",
            "path": "./syntaxes/mtalua.tmLanguage.json"
        }],
        "themes": [
            {
                "label": "Monokai MTA Lua",
                "uiTheme": "vs-dark",
                "path": "./themes/Monokai-MTA-Edit.tmTheme"
            },
            {
                "label": "Dark MTA Edit (Visual Studio)",
                "uiTheme": "vs-dark",
                "path": "./themes/Dark-MTA-Edit.json"
            }
        ],
        "snippets": [
            {
                "language": "mtalua",
                "path": "./snippets/snippets.json"
            }
        ]
    }
}